<%- include('header')%>
	<!-- End Header Area -->

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb mb-5 ">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Product Details Page</h1>
					<nav class="d-flex align-items-center">
						<a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="#">Shop<span class="lnr lnr-arrow-right"></span></a>
						<a href="single-product.html">product-details</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<form action="/search" method="post">
		<div class="cupon_text d-flex">
			<input type="text" class="ms-auto " style="width: 20rem;" name="search" placeholder="search" id="coupon">
			<button class="btn btn-brand " type="submit">search</button>
		</div>
	</form>

	<div class="d-flex mt-4 gap-4">

		<div class="sidebar-categories" style="white-space: nowrap;">
			<div class="head">Browse Categories</div>

			<div class="main-categories">
				<li class="main-nav-list" style="list-style: none;"><a data-toggle="collapse" href="#fruitsVegetable"
						aria-expanded="false" aria-controls="fruitsVegetable">Shop by Categories<span
							class="number"></span></a>
					<ul class="collapse py-3" style="list-style: none;" id="fruitsVegetable" data-toggle="collapse"
						aria-expanded="false" aria-controls="fruitsVegetable">
						<li class="main-nav-list child"><a href="/filter?cat=sports wear">sports wear<span
									class="number"></span></a></li>
						<li class="main-nav-list child"><a href="/filter?cat=casuals">casuals<span
									class="number"></span></a></li>
						<li class="main-nav-list child"><a href="/filter?cat=sneakers">sneakers<span
									class="number"></span></a></li>

					</ul>
				</li>

			</div>
			<div class="main-categories">
				<li class="main-nav-list" style="list-style: none;"><a data-toggle="collapse" href="#fruitsVegetable"
						aria-expanded="false" aria-controls="fruitsVegetable">Shop by Price<span
							class="number"></span></a>
					<ul class="collapse py-3" style="list-style: none;" id="fruitsVegetable" data-toggle="collapse"
						aria-expanded="false" aria-controls="fruitsVegetable">
						<li class="main-nav-list child"><a href="/priceFilter?maxPrice=1000   &price=0">under 1000<span
									class="number"></span></a></li>
						<li class="main-nav-list child"><a href="/priceFilter?maxPrice=2000   &price=1000">under
								2000<span class="number"></span></a></li>
						<li class="main-nav-list child"><a href="/priceFilter?maxPrice=3000   &price=2000"> under
								3000<span class="number"></span></a></li>

					</ul>
				</li>

			</div>
		</div>


		<!--================Single Product Area =================-->




		<div style="margin-top: 0rem;" class="row d-flex">

			<%if(locals.data){%>
				<%for(i=0;i<data.length;i++){%>
					<div class="col-xl-3 col-lg-4 col-md-6">
						<div width="10%" class="card card-product-grid">
							<a href="/productDetail?id=<%=data[i]._id%>" class="img-wrap"> <img
									src="upload/product/<%=data[i].images[0]%>" alt="Product"> </a>
							<div class="info-wrap">
								<div class="dropdown float-end">
									<!-- <a href="#" class="btn btn-sm btn-brand rounded">
								<i class="material-icons md-edit mr-5"></i>Edit -->
									</a>
									<div class="dropdown-menu dropdown-menu-end">
										<a class="dropdown-item" href="#">Edit info</a>
										<a class="dropdown-item text-danger" href="#">Delete</a>
									</div>
								</div>
								<a href="#" class="title">
									<%=data[i].name%>
								</a>
								<div class="price mt-1">
									<%=data[i].sale_price %>
								</div> <!-- price-wrap.// -->
							</div>
						</div> <!-- card-product  end// -->
					</div> <!-- col.// -->
					<%}%>
						<%}%>

							<%if(locals.currentpage){%>
								<% if (locals.totalpages) { %>
									<div class="pagination">
										<% if (currentpage> 1) { %>
											<button><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
											<% } %>

												<% for (let i=1; i <=totalpages; i++) { %>
													<button><a href="?page=<%= i %>"
															class="<%= i === currentpage ? 'active' : '' %>">
															<%= i %>
														</a></button>
													<% } %>

														<% if (currentpage < totalpages) { %>
															<button><a
																	href="?page=<%= currentpage + 1 %>">Next</a></button>
															<% } %>
									</div>
									<% } %>
										<% } %>

		</div>


	</div>
	<style>
		.table-spacing th,
		.table-spacing td {
			padding-left: 80px;
		}

		.pagination {
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 20px;
		}

		.pagination button {
			background-color: #f5f5f5;
			border: 1px solid #ccc;
			padding: 6px 12px;
			margin: 0 3px;
			cursor: pointer;

			transition: background-color 0.3s, color 0.3s;
		}

		.pagination button.active {
			background-color: #007bff;
			color: #fff;
			border-color: #007bff;
		}

		.pagination button:hover {
			background-color: #ddd;
		}
	</style>


	<br><br>

	<%- include('footer')%>