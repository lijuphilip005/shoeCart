</body>
<script>
    function removeAdress(userId,addressId){
        $.ajax({
            url:'/removeAdd',
            method:'post',
            data:{
                userId:userId,
                addressId:addressId,
            },

            success: (response) => {
              location.href="/address"
            }
        })
        






    }
</script>
