    <!-- Template CSS -->
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-11"><form action="/admin/edit/<%=data[0]._id%>" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-12">
                <div class="content-header">
                    <h2 class="content-title">Edit Product</h2>
                    
                    <div>
                        <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                        <input type="submit" class="btn btn-md rounded font-sm hover-up" value="publish">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                        
                       
                            <div class="mb-4">
                                <label for="product_name" name=" productName" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here"name="name" class="form-control" value="<%=data[0].name%>" id="product_name" >
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea placeholder="Type here" name="description" class="form-control"value="" rows="4"><%=data[0].description%></textarea>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label" >Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="" type="number" name="regular_price" min="0" value="<%=data[0].regular_price%>"class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Promotional price</label>
                                        <input placeholder="" name="sale_price" type="number"  min="0" value="<%=data[0].sale_price%>" class="form-control">
                                    </div>
                                </div>
                                
                                <div class="col-lg-4">
                                    <label class="form-label">Currency</label>
                                    <select class="form-select">
                                        <option> IND </option>
                                        <option> EUR </option>
                                        <option> USD </option>
                                    </select>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category">
                                        <% data.forEach(function(item) { %>
                                            <option><%= item.category %></option>
                                          <% }); %>
                                    </select>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">quantity</label>
                                        <input placeholder="" name="quantity" type="number" min="0" value="<%=data[0].quantity%>" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Tax rate</label>
                                <input type="number" placeholder="%" name="gst"  min="0" value="<%=data[0].gst%>"class="form-control" id="product_name">
                            </div>
                        
                    </div>
                </div> <!-- card end// -->
               
            </div>
    
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>

                    <div class="card-body">
                        <div class="input-upload">
                            <%for(let i=0;i<data[0].images.length;i++){%>
                            <img src="/upload/product/<%=data[0].images[i]%>" alt="img">
                            <%}%>
                            <input name="image" class="form-control"value="<%=data[0].images%>" type="file" multiple>
                            
                        </div>
                    </div>
                </div> <!-- card end// -->
          
        </div>
    </form> <!-- content-main end// -->
    <footer class="main-footer font-xs"> 
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
